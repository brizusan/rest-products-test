{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext","DOM"],
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "strict": false,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts"]

}